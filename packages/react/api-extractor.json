{
  "$schema": "https://developer.microsoft.com/json-schemas/api-extractor/v7/api-extractor.schema.json",

  /**
   * Main entry point - the TypeScript declaration file generated by tsup
   */
  "mainEntryPointFilePath": "<projectFolder>/dist/index.d.ts",

  /**
   * API Report - tracks your public API surface
   * This file is checked into git and reviewed during code review
   */
  "apiReport": {
    "enabled": true,
    "reportFolder": "<projectFolder>/etc/",
    "reportFileName": "<unscopedPackageName>.api.md"
  },

  /**
   * Doc Model - for generating API documentation (optional)
   */
  "docModel": {
    "enabled": false
  },

  /**
   * DTS Rollup - bundles all .d.ts files into a single file
   * This makes it easier for consumers to see the full API
   */
  "dtsRollup": {
    "enabled": true,
    "untrimmedFilePath": "<projectFolder>/dist/<unscopedPackageName>.d.ts"
  },

  /**
   * TSDoc Metadata - for documentation generation
   */
  "tsdocMetadata": {
    "enabled": false
  },

  /**
   * Messages - configure warnings and errors
   */
  "messages": {
    "compilerMessageReporting": {
      "default": {
        "logLevel": "warning"
      }
    },
    "extractorMessageReporting": {
      "default": {
        "logLevel": "warning",
        "addToApiReportFile": true
      },
      "ae-missing-release-tag": {
        "logLevel": "none"
      },
      "ae-internal-missing-underscore": {
        "logLevel": "none"
      }
    },
    "tsdocMessageReporting": {
      "default": {
        "logLevel": "warning"
      },
      "tsdoc-undefined-tag": {
        "logLevel": "none"
      }
    }
  }
}
