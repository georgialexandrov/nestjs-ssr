{
  "name": "nest-ssr",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "generate:registry": "tsx scripts/generate-view-registry.ts",
    "build:client": "vite build --outDir dist/client && cp src/view/template.html dist/client/template.html",
    "build:server": "vite build --ssr src/view/entry-server.tsx --outDir dist/server && echo '{\"type\":\"module\"}' > dist/server/package.json",
    "prebuild": "pnpm generate:registry && rm -rf dist && pnpm build:client && pnpm build:server",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "node dist/src/main",
    "prestart:dev": "pnpm generate:registry",
    "dev:vite": "vite --port 5173",
    "dev:nest": "nest start --watch --entryFile src/main",
    "start:dev": "concurrently -n vite,nest -c cyan,green \"pnpm dev:vite\" \"pnpm dev:nest\"",
    "start:debug": "nest start --debug --watch --entryFile src/main",
    "start:prod": "NODE_ENV=production node dist/src/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "pnpm test:unit && pnpm test:components",
    "test:unit": "jest",
    "test:unit:watch": "jest --watch",
    "test:unit:cov": "jest --coverage",
    "test:unit:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:components": "vitest run",
    "test:components:watch": "vitest",
    "test:components:ui": "vitest --ui",
    "test:components:cov": "vitest run --coverage",
    "test:integration": "jest --config ./test/jest-e2e.json integration",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:all": "pnpm test:unit && pnpm test:components && pnpm test:integration && pnpm test:e2e",
    "test:watch": "concurrently -n unit,components -c yellow,cyan \"pnpm test:unit:watch\" \"pnpm test:components:watch\""
  },
  "dependencies": {
    "@nestjs/common": "^11.0.1",
    "@nestjs/core": "^11.0.1",
    "@nestjs/platform-express": "^11.0.1",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-slot": "^1.2.4",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "express": "^4.18.2",
    "helmet": "^8.1.0",
    "lucide-react": "^0.555.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "serialize-javascript": "^7.0.1",
    "tailwind-merge": "^3.4.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@playwright/test": "^1.57.0",
    "@tailwindcss/postcss": "^4.1.17",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/express": "^5.0.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.10.7",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@types/serialize-javascript": "^5.0.4",
    "@types/supertest": "^6.0.2",
    "@vitejs/plugin-react": "^5.1.1",
    "@vitest/ui": "^4.0.14",
    "autoprefixer": "^10.4.22",
    "concurrently": "^9.2.1",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "glob": "^13.0.0",
    "globals": "^16.0.0",
    "happy-dom": "^20.0.11",
    "http-proxy-middleware": "^3.0.5",
    "jest": "^30.0.0",
    "jsdom": "^27.2.0",
    "postcss": "^8.5.6",
    "prettier": "^3.4.2",
    "rollup-plugin-visualizer": "^6.0.5",
    "serialize-javascript": "^7.0.1",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "tailwindcss": "^4.1.17",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.20.6",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0",
    "vite": "^7.2.4",
    "vite-plugin-compression": "^0.5.1",
    "vite-plugin-inspect": "^11.3.3",
    "vitest": "^4.0.14"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/",
      "/views/",
      "/view/"
    ],
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s",
      "!**/views/**",
      "!**/view/**",
      "!**/*.spec.ts",
      "!**/node_modules/**"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/$1",
      "^@shared/(.*)$": "<rootDir>/shared/$1",
      "^@users/(.*)$": "<rootDir>/users/$1",
      "^@view/(.*)$": "<rootDir>/view/$1"
    }
  }
}
