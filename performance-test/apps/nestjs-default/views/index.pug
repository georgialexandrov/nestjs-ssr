doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Performance Test - NestJS + Pug
    style.
      body {
        font-family: system-ui, -apple-system, sans-serif;
        max-width: 800px;
        margin: 0 auto;
        padding: 2rem;
        line-height: 1.6;
      }
      h1 {
        color: #e0234e;
      }
      .item {
        border: 1px solid #ddd;
        border-radius: 4px;
        padding: 1rem;
        margin: 1rem 0;
      }
      .item h3 {
        margin-top: 0;
        color: #333;
      }
      .counter {
        margin: 2rem 0;
        padding: 1rem;
        background: #f5f5f5;
        border-radius: 4px;
      }
      button {
        background: #e0234e;
        color: white;
        border: none;
        padding: 0.5rem 1rem;
        border-radius: 4px;
        cursor: pointer;
        margin: 0 0.5rem;
      }
      button:hover {
        background: #c01d42;
      }
  body
    h1 Performance Test - NestJS + Pug
    p= message

    div.counter
      h2 Counter:
        span#count 0
      div
        button(onclick="increment()") Increment
        button(onclick="decrement()") Decrement

    h2 Items
    each item in items
      div.item
        h3= item.name
        p= item.description

    script.
      let count = 0;
      function increment() {
        count++;
        document.getElementById('count').textContent = count;
      }
      function decrement() {
        count--;
        document.getElementById('count').textContent = count;
      }
