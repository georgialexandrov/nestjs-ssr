# Build stage
FROM node:22-alpine AS builder

WORKDIR /app

# Copy package files
COPY performance-test/apps/nestjs-ssr/package.json performance-test/apps/nestjs-ssr/pnpm-lock.yaml* ./

# Copy the @nestjs-ssr/react tarball
COPY nestjs-ssr-react.tgz ./

# Install pnpm
RUN corepack enable && corepack prepare pnpm@latest --activate

# Install dependencies
RUN pnpm install --frozen-lockfile

# Copy application code
COPY performance-test/apps/nestjs-ssr ./

# Build the application
RUN pnpm run build

# Production stage
FROM node:22-alpine

WORKDIR /app

# Copy package files
COPY performance-test/apps/nestjs-ssr/package.json performance-test/apps/nestjs-ssr/pnpm-lock.yaml* ./

# Copy the @nestjs-ssr/react tarball
COPY nestjs-ssr-react.tgz ./

# Install pnpm and production dependencies
RUN corepack enable && corepack prepare pnpm@latest --activate
RUN pnpm install --frozen-lockfile --prod

# Copy built application
COPY --from=builder /app/dist ./dist
COPY --from=builder /app/src/view/template.html ./dist/client/template.html

# Set environment variables
ENV NODE_ENV=production
ENV PORT=3000

# Expose port
EXPOSE 3000

# Health check
HEALTHCHECK --interval=10s --timeout=3s --start-period=10s \
  CMD node -e "require('http').get('http://localhost:3000', (r) => {process.exit(r.statusCode === 200 ? 0 : 1)})"

# Start the application
CMD ["node", "dist/main.js"]
